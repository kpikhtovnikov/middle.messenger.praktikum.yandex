---
title: Вход
style:
- ../components/css/button.css
- ./css/login.css
- ../components/css/input.css
---

{{#extend 'layouts'}}
    {{#content 'main'}}
        <div class="page-login">
            <div class="page-login-content">
                <div class="page-login-title"><h1>{{ title }}</h1></div>
                <div class="page-login-inputData">
                    {{#each login.inputData}}
                        {{> input label = this.title name = this.name type = this.type }}
                    {{/each}}
                </div>
                <div class="field-buttons">
                    <div class="button-login">
                        {{> button text = "Авторизоваться" currentStyle = "button" href = "chat.hbs"}}
                    </div>
                    <a class="login-link" href="signUp.hbs">Нет аккаунта?</a>
                </div>
            </div>
        </div>
    {{/content}}
{{/extend}}
